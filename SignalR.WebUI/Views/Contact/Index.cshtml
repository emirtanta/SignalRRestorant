@model List<ResultContactDto>
@{
	ViewData["Title"] = "İletişim Listesi";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">@ViewData["Title"]</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">
							İletişim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						</div>

						<a asp-controller="Contact" asp-action="CreateContact" class="btn btn-outline-primary">Ekle</a>

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Lokasyon</th>
									<th scope="col">Mail</th>
									<th scope="col">Telefon</th>
									<th scope="col"></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Location</td>
										<td>@item.Mail</td>
										<td>@item.Phone</td>
										<td>
											<a asp-controller="Contact" asp-action="UpdateContact" asp-route-id="@item.ContactId" class="btn btn-outline-info">Düzenle</a>
											<a asp-controller="Contact" asp-action="DeleteContact" asp-route-id="@item.ContactId" class="btn btn-outline-danger">Sil</a>
										</td>
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>

