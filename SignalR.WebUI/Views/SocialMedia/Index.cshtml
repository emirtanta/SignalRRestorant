@model List<ResultSocialMediaDto>
@{
	ViewData["Title"] = "Sosyal Medya Listesi";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">@ViewData["Title"]</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">
							Sosyal Medya ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						</div>

						<a asp-controller="SocialMedia" asp-action="CreateSocialMedia" class="btn btn-outline-primary">Ekle</a>

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Resim</th>
									<th scope="col">Medya Adı</th>
									<th scope="col">Link</th>
									<th scope="col"></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Icon</td>
										<td>@item.Title</td>
										<td>@item.Url</td>
										<td>
											<a asp-controller="SocialMedia" asp-action="UpdateSocialMedia" asp-route-id="@item.SocialMediaId" class="btn btn-outline-info">Düzenle</a>
											<a asp-controller="SocialMedia" asp-action="DeleteSocialMedia" asp-route-id="@item.SocialMediaId" class="btn btn-outline-danger">Sil</a>
										</td>
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>


