@model CreateMailDto
@{
    ViewData["Title"] = "Mail Gönderme Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">@ViewData["Title"]</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="ReceiverMail"></label>
                                <input type="email" class="form-control" asp-for="ReceiverMail">
                            </div>

                            <div class="form-group">
                                <label asp-for="Subject"></label>
                                <input type="text" class="form-control" asp-for="Subject">
                            </div>

                            <div class="form-group">
                                <label asp-for="Body"></label>
                                <textarea  rows="5" class="form-control" asp-for="Body"></textarea>
                            </div>

                            <div class="card-action">
                                <button class="btn btn-outline-success">Gönder</button>
                                <a asp-controller="Mail" asp-action="Index" class="btn btn-outline-danger">İptal</a>
                            </div>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

