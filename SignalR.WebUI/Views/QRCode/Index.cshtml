@{
    ViewData["Title"] = "QR Kod Oluşturma Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">@ViewData["Title"]</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="QRCode" asp-action="Index">
                    <input type="text" name="value" />


                    <input type="submit" value="QR Oluştur" class="btn btn-outline-warning" />

                    <br />
                    <br />

                    @if (ViewBag.QrCodeImage != null)
                    {
                        <img src="@ViewBag.QrCodeImage" alt="" style="width:400px;height:400px">
                    }

                </form>
            </div>
        </div>
    </div>
</div>