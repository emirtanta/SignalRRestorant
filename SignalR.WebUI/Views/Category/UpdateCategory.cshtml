@model UpdateCategoryDto
@{
    ViewData["Title"] = "Kategori Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">@ViewData["Title"]</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-body">

                            <input type="hidden" asp-for="CategoryId" />

                            <div class="form-group">
                                <label asp-for="CategoryName"></label>
                                <input type="text" class="form-control" asp-for="CategoryName">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-info">Güncelle</button>
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-danger">İptal</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


