@model UpdateAboutDto
@{
    ViewData["Title"] = "Hakkımızda Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">@ViewData["Title"]</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-body">
                            <input type="hidden" asp-for="AboutId" />
                            <div class="form-group">
                                <label asp-for="Title"></label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>

                            <br />

                            <div class="form-group">
                                <label asp-for="ImageUrl"></label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                            </div>

                            <br />

                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea rows="5" class="form-control" asp-for="Description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-info">Güncelle</button>
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-danger">İptal</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

