@model List<ResultNotificationDto>
@{
	ViewData["Title"] = "Bildirim Listesi";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">@ViewData["Title"]</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">
							Bildirim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						</div>

						<a asp-controller="Notification" asp-action="CreateNotification" class="btn btn-outline-primary">Ekle</a>

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col"></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>
										<td>
											<a asp-controller="Notification" asp-action="UpdateNotification" asp-route-id="@item.NotificationId" class="btn btn-outline-info">Düzenle</a>
											<a asp-controller="Notification" asp-action="DeleteNotification" asp-route-id="@item.NotificationId" class="btn btn-outline-danger">Sil</a>

											<a asp-controller="Notification" asp-action="NotificationStatusChangeToTrue" asp-route-id="@item.NotificationId" class="btn btn-outline-danger">Okundu</a>

											<a asp-controller="Notification" asp-action="NotificationStatusChangeToFalse" asp-route-id="@item.NotificationId" class="btn btn-outline-danger">Okunmadı</a>
										</td>
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>

