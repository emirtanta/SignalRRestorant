@model CreateNotificationDto
@{
    ViewData["Title"] = "Yeni Bildirim Girişi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">@ViewData["Title"]</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="Type"></label>
                                <input type="text" class="form-control" asp-for="Type">
                            </div>

                            <div class="form-group">
                                <label asp-for="Icon"></label>
                                <input type="text" class="form-control" asp-for="Icon">
                            </div>

                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea rows="5" class="form-control" asp-for="Description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-success">Ekle</button>
                            <a asp-controller="Notification" asp-action="Index" class="btn btn-outline-danger">İptal</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

