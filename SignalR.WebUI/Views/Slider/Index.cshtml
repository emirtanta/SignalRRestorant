@model List<ResultSliderDto>
@{
    ViewData["Title"] = "Öne Çıkanlar Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">@ViewData["Title"]</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">
							Öne Çıkanlar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						</div>

						<a asp-controller="Slider" asp-action="CreateSlider" class="btn btn-outline-primary">Ekle</a>

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık 1</th>
									<th scope="col">Açıklama 1</th>
									<th scope="col"></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SliderId</td>
										<td>@item.Title1</td>
										<td>@item.Description1</td>
										<td>
											<a asp-controller="Slider" asp-action="UpdateSlider" asp-route-id="@item.SliderId" class="btn btn-outline-info">Düzenle</a>
											<a asp-controller="Slider" asp-action="DeleteSlider" asp-route-id="@item.SliderId" class="btn btn-outline-danger">Sil</a>
										</td>
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>

