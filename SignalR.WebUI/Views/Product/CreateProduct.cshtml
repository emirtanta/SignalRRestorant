@model CreateProductDto
@{
    ViewData["Title"] = "Ürün Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">@ViewData["Title"]</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div class="card">

                        @* ürün adı *@
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="ProductName"></label>
                                <input type="text" class="form-control" asp-for="ProductName">
                            </div>
                        </div>

                        @* fiyat bölümü *@
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Price"></label>
                                <input type="text" class="form-control" asp-for="Price">
                            </div>
                        </div>

                        @* resim bölümü *@
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="ImageUrl"></label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                            </div>
                        </div>

                        @* kategori bölümü *@
                        <div class="card-body">
                            <div class="form-group">
                                <label> Kategorisi </label>
                                @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
                            </div>
                        </div>

                        @* açıklama *@
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <input type="text" class="form-control" asp-for="Description">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-primary">Ekle</button>
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-danger">İptal</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

